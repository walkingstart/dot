# resize window (you can also use the mouse for that)
mode "resize" {

bindsym h resize shrink left 8 px or 8 ppt
bindsym Shift+H resize grow left 8 px or 8 ppt
bindsym j resize shrink down 8 px or 8 ppt
bindsym Shift+J resize grow down 8 px or 8 ppt
bindsym k resize shrink up 8 px or 8 ppt
bindsym Shift+K resize grow up 8 px or 8 ppt
bindsym l resize shrink right 8 px or 8 ppt
bindsym Shift+L resize grow right 8 px or 8 ppt

bindsym Left resize shrink left 8 px or 8 ppt
bindsym Shift+Left resize grow left 8 px or 8 ppt
bindsym Down resize shrink down 8 px or 8 ppt
bindsym Shift+Down resize grow down 8 px or 8 ppt
bindsym Up resize shrink up 8 px or 8 ppt
bindsym Shift+Up resize grow up 8 px or 8 ppt
bindsym Right resize shrink right 8 px or 8 ppt
bindsym Shift+Right resize grow right 8 px or 8 ppt

bindsym Return mode "default"
bindsym Escape mode "default"

}

bindsym $mod+r mode "resize"

# Custom KeyBinds
set $mode_system System (l) lock, (e) exit, (s) suspend, (h) hibernate, (r) reboot, (Shift+s) Shutdown
mode "$mode_system" {
    bindsym l exec bash ~/.i3/i3lock.sh, mode "default"
    bindsym e exec i3-msg exit, mode "default"
    bindsym s exec i3exit suspend, mode "default"
    bindsym h exec i3exit hibernate, mode "default"
    bindsym r exec systemctl reboot, mode "default"
    bindsym Shift+s exec systemctl poweroff, mode "default"

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+Shift+e mode "$mode_system"
