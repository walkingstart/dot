# Fixed workspace layout {{{

for_window [workspace="$WS2|$WS4"] layout tabbed
# }}}

# Window title format {{{

for_window [class="(?i)"] title_format "<span weight='ultraheavy' foreground='$darkblack'>   </span><span weight='bold' >%title</span>"

# }}}

# Gaps {{{

#smart_gaps on
gaps outer 2
gaps inner 4

